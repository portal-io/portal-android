<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color2_alpha_00"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/bg_dialog_white_coreners_round"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_textview_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:textColor="@color/color3"
                    android:lineSpacingMultiplier="1.5"
                    android:textSize="@dimen/font_51" />

                <TextView
                    android:id="@+id/dialog_textview_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textColor="@color/color7"
                    android:textSize="@dimen/font_36"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginTop="35dp"
            android:background="@color/color9" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_btn_below_round_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color3"
            android:textSize="@dimen/font_51"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_left_below_round_selector"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color3"
                android:textSize="@dimen/font_51" />

            <View
                android:id="@+id/line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color9" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_right_below_round_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color3"
                android:textSize="@dimen/font_51" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>