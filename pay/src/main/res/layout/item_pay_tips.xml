<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_pay"
    android:layout_width="312dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_pay"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView
        android:id="@+id/btn_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/btn_pay_selector" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:textColor="@color/color20"
        android:textSize="@dimen/font_45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_price"
        android:layout_toRightOf="@id/btn_pay"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            android:lines="2"
            android:textColor="@color/color3"
            android:textSize="@dimen/font_45" />

        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="查看详情>"
            android:textColor="@color/color8"
            android:textSize="@dimen/font_33"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_price_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/color15_color16_selector"
        android:textSize="@dimen/font_39"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_whaley_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_price"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/color6"
        android:textSize="@dimen/font_39"
        android:visibility="gone" />
</RelativeLayout>