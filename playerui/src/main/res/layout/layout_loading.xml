<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_normal_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_player_normal_loading"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_normal_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_player_normal_loading" />

        <TextView
            android:id="@+id/tv_normal_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>
    <View
        android:id="@+id/view_blocking"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"/>
</FrameLayout>