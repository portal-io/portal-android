<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="236dp"
    android:background="@color/color12"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_648"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_648"
        android:background="@drawable/bg_comp_img_selector" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:shadowColor="@color/color2"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:textColor="@color/color_compilation_name_selector"
        android:textSize="@dimen/font_51"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:shadowColor="@color/color2"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:textColor="@color/color_compilation_num_selector"
        android:textSize="@dimen/font_36" />

    <TextView
        android:id="@+id/tv_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_num"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="3"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:textColor="@color/color_compilation_num_selector"
        android:textSize="@dimen/font_36" />
</RelativeLayout>