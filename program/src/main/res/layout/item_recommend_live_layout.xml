<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/size_30">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_reserve"
        android:layout_width="@dimen/size_240"
        android:layout_height="@dimen/size_108"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_image"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_btn_rectangle_corner_sky_blue_shape"
        android:gravity="center"
        android:text="前往预约"
        android:textColor="@color/color1" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_image"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@id/tv_reserve"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/color3" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/tv_reserve"
        android:paddingBottom="13dp"
        android:text="TextView"
        android:textColor="@color/color7"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/color12"
        android:textSize="13sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_soccer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/football_icon"/>

</RelativeLayout>