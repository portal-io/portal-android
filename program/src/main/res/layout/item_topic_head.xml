<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:maxWidth="260dp"
        android:textColor="@color/color3"
        android:textSize="@dimen/font_51"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/view_num"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_numVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:paddingRight="12dp"
            android:textColor="@color/color7"
            android:textSize="@dimen/font_36" />

        <TextView
            android:id="@+id/tv_have_voucher"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/size_30"
            android:background="@drawable/bg_color2a00_frame1_color15a70_fillet18"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="已有观看券"
            android:textColor="@color/color15_alpha_70"
            android:textSize="@dimen/font_30"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_num"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.4"
        android:textColor="@color/color7"
        android:textSize="@dimen/font_36" />


</RelativeLayout>