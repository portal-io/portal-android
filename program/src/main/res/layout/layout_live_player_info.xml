<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_live_prompt_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color2_alpha_30" />

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_120">

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_90"
            android:textColor="@color/color2"
            android:textSize="@dimen/font_51" />

        <TextView
            android:id="@+id/tv_play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:textColor="@color/color14"
            android:textSize="@dimen/font_33"/>

        <LinearLayout
            android:id="@+id/view_time_and_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_60"
            android:layout_marginRight="@dimen/space_60"
            android:layout_marginTop="@dimen/space_60"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_player_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_time"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color3"
                android:textSize="@dimen/font_36" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_60"
                android:drawableLeft="@mipmap/icon_location"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color3"
                android:textSize="@dimen/font_36" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_live_content"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="@dimen/space_60"
            android:layout_marginRight="@dimen/space_60"
            android:layout_marginTop="@dimen/space_60"
            android:scrollbars="vertical"
            android:textColor="@color/color7"
            android:textSize="@dimen/font_36" />
    </LinearLayout>
</FrameLayout>