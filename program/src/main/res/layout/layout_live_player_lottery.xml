<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:id="@+id/layout_lottery"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view_live_title"
    android:layout_alignWithParentIfMissing="true"
    android:layout_marginTop="38dp"
    android:layout_marginLeft="10dp"
    >
    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_114"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_live_chest_box_shape"
        android:gravity="center_vertical"
        android:paddingLeft="56dp"
        android:paddingRight="8dp"
        android:textColor="@color/color12"
        android:textSize="@dimen/font_30" />

    <ImageView
        android:id="@+id/iv_chest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="53dp"
        android:minHeight="52dp"
        android:scaleType="centerInside"
        android:layout_marginLeft="4dp"
        android:src="@mipmap/icon_box" />

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_countdown"
        android:background="@null"
        android:src="@mipmap/close_box" />
</RelativeLayout>