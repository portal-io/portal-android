<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reset_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color11">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/search_empty" />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_60"
        android:text="@string/search_load_empty"
        android:textColor="@color/load_fail_color"
        android:textSize="@dimen/font_48" />
</RelativeLayout>