<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

    <com.whaley.core.widget.imageview.FrameAnimImageView
        android:id="@+id/iv_logo"
        android:layout_width="123dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_loading_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/line_player_loading" />

    <TextView
        android:id="@+id/tv_complete_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tv_complete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:includeFontPadding="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.whaley.core.widget.imageview.FrameAnimImageView
            android:id="@+id/iv_logo2"
            android:layout_width="123dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/iv_loading_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/line_player_loading" />

        <TextView
            android:id="@+id/tv_complete_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tv_complete_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:includeFontPadding="false"/>

    </LinearLayout>


</LinearLayout>