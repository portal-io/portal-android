<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color12"
    android:gravity="center_horizontal">

    <com.whaley.core.widget.imageview.FrameAnimImageView
        android:id="@+id/iv_pic"
        android:layout_width="260dp"
        android:layout_height="233.3dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/cardboard_00000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="横屏放入VR眼镜体验沉浸模式"
        android:textColor="@color/color4"
        android:textSize="15sp"
        android:includeFontPadding="false"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btn_enter"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:text="进入VR模式"
        android:textColor="@drawable/text_enter_vr"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@drawable/bg_btn_vr"
        android:layout_marginTop="66dp"/>

</LinearLayout>