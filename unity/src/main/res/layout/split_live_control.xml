<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layout_control"
android:layout_width="match_parent"
android:layout_height="match_parent">

<RelativeLayout
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="top"
    android:background="@color/color2_alpha_70">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_btn_player_back_selector" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn_back"
        android:textColor="#FFFFFF" />

    <View
        android:id="@+id/divider"
        android:layout_width="@dimen/size_3"
        android:layout_height="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/tv_title"
        android:layout_centerVertical="true"
        android:background="@color/color12_alpha_20" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/divider"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/split_audience_count"
        android:drawablePadding="2dp"
        android:includeFontPadding="false"
        android:textColor="@color/color14"
        android:textSize="@dimen/font_33" />

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="6dp"
        android:src="@drawable/btn_split_title_close_selector" />

    <TextView
        android:id="@+id/tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>

<RelativeLayout
    android:id="@+id/layout_bottom_controls"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:paddingRight="7dp"
    android:layout_gravity="bottom"
    android:background="@color/color2_alpha_70">

    <LinearLayout
        android:id="@+id/layout_bottom_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minHeight="20dp"
            android:minWidth="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/font_39"
            android:text="高清"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/btn_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="5dp"
            android:src="@drawable/bg_exit_split_selector" />

    </LinearLayout>

</RelativeLayout>

</FrameLayout>